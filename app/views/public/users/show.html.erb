

<div class="row">
  <div class="col-3"></div>
    <div class="col-5">
    <h2 class="my-4">マイページ</h2>
      <%= link_to "編集する", edit_user_path(@user), class:"btn btn-success my-3 ml-4" %>
        <table class="table my-3">
          <tr>
            <th>名前</th>
            <td><%= @user.user_name %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= @user.address %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= @user.phone_number %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @user.email %></td>
          </tr>
        </table>
        <p><strong>投稿履歴</strong><%= link_to "一覧を見る", posts_path, class:"btn btn-primary" %></p>

