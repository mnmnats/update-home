<!DOCTYPE html>
<html>
  <head>
    <title>UpdateHome</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="shadow-lg bg-light">
      <nav class="navbar">
        <div class="container">
          <ul class="nav nav-tabs">
            <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to new_post_path, class:"nav-link mx-2 text-dark" do %>
              <span><i class="fas fa-birthday-cake">投稿フォーム</i></span>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to user_path(current_user), class:"nav-link mx-2 text-dark" do %>
              <span><i class="fas fa-user">My page</i></span>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to posts_path, class:"nav-link mx-2 text-dark" do %>
              <span><i class="fas fa-birthday-cake"></i>投稿一覧</span>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to destroy_user_session_path, method: :delete,class:"nav-link text-dark" do %>
              <span><i class="fas fa-sign-out-alt"></i>ログアウト</span>
              <% end %>
            </li>

            <% elsif admin_signed_in? %>
            <li class="nav-item">
              <%= link_to admin_posts_path, class: "nav-link text-dark" do %>
              <span><i class="fas fa-birthday-cake"></i>投稿一覧</span>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to admin_users_path, class:"nav-link text-dark" do %>
              <span><i class="fas fa-users"></i>会員一覧</span>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class:"nav-link text-dark" %>
            </li>

            <% else %>
            <li class="nav-item">
              <%= link_to root_path, class:"nav-link mx-2 text-dark" do %>
              <span><i class="fas fa-address-card"></i>update home</span>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to posts_path, class:"nav-link text-dark" do %>
              <span><i class="fas fa-birthday-cake"></i>投稿一覧</span>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_user_registration_path, class:"nav-link mx-2 text-dark" do %>
              <span><i class="fas fa-user-plus"></i>Sign up</span>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_user_session_path, class:"nav-link mx-2 text-dark" do %>
              <span><i class="fas fa-sign-in-alt"></i>Log in</span>
              <% end %>
            </li>
            <% end %>
          </ul>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
